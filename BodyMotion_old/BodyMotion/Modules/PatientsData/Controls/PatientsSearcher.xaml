<UserControl x:Class="BodyMotion.Modules.PatientsData.Controls.PatientsSearcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BodyMotion.Modules.PatientsData.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" >
    <Grid>
        <StackPanel Orientation="Horizontal">
          <syncfusion:SfTextBoxExt HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  HorizontalContentAlignment="Left"
                                  Height="40"
                                  Width="310" 
                                   x:Name="searchPatientTxt"
                                  Text="" FontSize="22" KeyUp="searchPatientTxt_KeyUp"/>
            <syncfusion:RibbonButton SizeForm="Large" Label="Select" CollapseLabel="Collapsed" x:Name="searchPatientBtn" Click="searchPatientBtn_Click"></syncfusion:RibbonButton>
        </StackPanel>
    </Grid>
</UserControl>
